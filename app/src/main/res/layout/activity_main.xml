<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/okra_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Okra"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/okra_okhi_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Open OkHi"
        app:layout_constraintEnd_toEndOf="@+id/okra_btn"
        app:layout_constraintStart_toStartOf="@+id/okra_btn"
        app:layout_constraintTop_toBottomOf="@+id/okra_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>